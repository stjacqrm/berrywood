//#######################
//###Docker Containers###
//#######################

vadr_container = 'staphb/vadr:1.3'
pangolin_container = 'staphb/pangolin:3.1.17-pangolearn-2021-11-25'
nextclade_container = 'nextstrain/nextclade:0.14.4'
render_container = 'staphb/berrywood-report-env:1.0'

process {
  errorStrategy = 'retry'
  maxRetries = 1
  cpus = 8
  memory = '31 GB'

  withName:annotate{
    container = vadr_container
  }
  withName:annotate_total{
    container = vadr_container
  }
  withName:nextlclade_mutations{
    container = nextclade_container
  }
  withName:lineage{
    container = pangolin_container
  }
  withName:render{
   container = render_container
  }
}
